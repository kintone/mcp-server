{
  "name": "@kintone/mcp-server",
  "version": "1.2.3",
  "description": "The official MCP Server for kintone",
  "keywords": [
    "kintone",
    "mcp",
    "modelcontextprotocol"
  ],
  "homepage": "https://github.com/kintone/mcp-server#readme",
  "bugs": {
    "url": "https://github.com/kintone/mcp-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kintone/mcp-server.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Cybozu, Inc.",
    "url": "https://cybozu.co.jp"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "kintone-mcp-server": "dist/index.js"
  },
  "files": [
    "CHANGELOG.md",
    "dist"
  ],
  "scripts": {
    "prebuild": "pnpm clean:dist",
    "build": "tsc",
    "build:mcpb": "./scripts/build-mcpb.sh",
    "check:mcpb": "mcpb validate .",
    "clean": "pnpm \"/^clean:.*/\"",
    "clean:dist": "rm -rf dist",
    "clean:mcpb": "rm -rf build",
    "commitlint": "commitlint",
    "dev": "tsx --watch src/index.ts",
    "doc:update-toc": "doctoc README.md README_en.md --github --maxlevel 3 --notitle",
    "fix": "pnpm run \"/^fix:.*/\"",
    "fix:eslint": "pnpm lint:eslint --fix",
    "fix:prettier": "pnpm lint:prettier --write",
    "inspector": "mcp-inspector node dist/index.js",
    "inspector:dev": "mcp-inspector tsx src/index.ts",
    "license:analyze": "license-manager analyze -c license-manager.config.cjs",
    "license:extract": "license-manager extract -c license-manager.config.cjs -w .",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:prettier": "prettier --check '**/*.{json,json5,md,yml,yaml}' --cache",
    "mcpb": "mcpb",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest --config vitest.config.e2e.ts",
    "test:watch": "vitest --watch",
    "typecheck": "tsc -noEmit "
  },
  "dependencies": {
    "@kintone/rest-api-client": "^6.1.0",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "file-type": "^21.1.1",
    "https-proxy-agent": "^7.0.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^2.1.2",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@cybozu/eslint-config": "^25.0.0",
    "@cybozu/license-manager": "^1.4.1",
    "@modelcontextprotocol/inspector": "^0.17.5",
    "@types/node": "^22.19.2",
    "doctoc": "^2.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-package-json": "^0.85.0",
    "globals": "^16.5.0",
    "npm": "^11.7.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "engines": {
    "node": ">= 22"
  },
  "publishConfig": {
    "access": "public"
  }
}
