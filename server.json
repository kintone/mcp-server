{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.kintone/mcp-server",
  "description": "The official MCP Server for kintone",
  "repository": {
    "url": "https://github.com/kintone/mcp-server",
    "source": "github"
  },
  "version": "1.2.1",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@kintone/mcp-server",
      "version": "1.2.1",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Your API key for the service",
          "isRequired": true,
          "format": "string",
          "isSecret": true,
          "name": "YOUR_API_KEY"
        }
      ]
    }
  ]
}
